<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.eber"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <!--网络访问权限-->
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <!--往sdcard中写入数据的权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <!--在sdcard中创建/删除文件的权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"></uses-permission>

    <application
        android:name=".EBERApp"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.launcher.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.MainActivity"></activity>
        <activity android:name=".ui.launcher.GuideActivity"></activity>
        <activity android:name=".ui.login.LoginActivity"></activity>
        <activity android:name=".ui.register.EnrollActivity"></activity>
        <activity android:name=".ui.binddevice.BindDeviceActivity1"></activity>
        <activity android:name=".ui.binddevice.BindDeviceActivity2"></activity>
        <activity android:name=".ui.tendency.HistoryActivity"></activity>
        <activity android:name=".ui.register.FillInformationActivity">
        </activity>
        <activity android:name=".ui.home.LocalMemberActivity"></activity>
        <activity android:name=".ui.WebActivity"></activity>
    </application>

</manifest>