<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <com.eber.bfs.views.NestRadioGroup
        android:id="@+id/tendency_navi_root_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_tendency_navi_bg"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/tendency_navi_weight_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="体重"
            android:textSize="15sp"/>

        <View
            android:id="@+id/tendency_navi_line1"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#666"/>

        <RadioButton
            android:id="@+id/tendency_navi_fat_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="脂肪率"
            android:textSize="15sp"/>

        <View
            android:id="@+id/tendency_navi_line2"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#666"/>

        <RadioButton
            android:id="@+id/tendency_navi_muscle_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="肌肉量"
            android:textSize="15sp"/>

        <View
            android:id="@+id/tendency_navi_line3"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#666"/>

        <RadioButton
            android:id="@+id/tendency_navi_water_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="体水分"
            android:textSize="15sp"/>

        <View
            android:id="@+id/tendency_navi_line4"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#666"/>

        <RadioButton
            android:id="@+id/tendency_navi_protein_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="蛋白质"
            android:textSize="15sp"/>
    </com.eber.bfs.views.NestRadioGroup>

    <RadioGroup
        android:id="@+id/tendency_navi_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/tendency_week_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_tendency_sl_date_bg"
            android:button="@null"
            android:gravity="center"
            android:text="周"
            android:textSize="15sp"/>

        <RadioButton
            android:id="@+id/tendency_month_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_tendency_sl_date_bg"
            android:button="@null"
            android:gravity="center"
            android:text="月"
            android:textSize="15sp"/>

        <RadioButton
            android:id="@+id/tendency_year_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_tendency_sl_date_bg"
            android:button="@null"
            android:gravity="center"
            android:text="年"
            android:textSize="15sp"/>
    </RadioGroup>
</LinearLayout>