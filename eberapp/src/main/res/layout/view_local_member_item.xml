<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/local_member_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_local_member_man"/>

    <TextView
        android:id="@+id/local_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/local_member_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/local_member_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/local_member_head"
        android:layout_alignTop="@id/local_member_head"
        android:src="@mipmap/ic_local_member_del"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/local_member_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/local_member_head"
        android:layout_alignRight="@id/local_member_head"
        android:src="@mipmap/ic_local_member_selected"
        android:visibility="invisible"/>
</RelativeLayout>