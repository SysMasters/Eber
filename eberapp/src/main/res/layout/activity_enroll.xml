<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title_view"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:gravity="center"
        android:background="#03a9f4">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ico_head_phone"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="13dp"
        android:layout_marginTop="24dp"
        android:paddingBottom="13dp"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="37dp"
        android:background="@drawable/enroll_et_bg">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ico_user_phone"/>
        <EditText
            android:id="@+id/login_phone_num_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="11"
            android:inputType="number"
            android:hint="手机号"
            android:textColor="#888"
            android:textSize="15sp"
            android:background="@android:color/transparent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="77dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/login_code_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="6"
            android:padding="13dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/enroll_et_bg"
            android:textSize="15sp"
            android:hint="输入验证码"/>
        <Button
            android:id="@+id/login_get_code_btn"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:background="@drawable/login_btn_bg"
            android:text="获取验证码"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="37dp"
        android:background="@drawable/enroll_et_bg"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/ico_user_psw"/>
        <EditText
            android:id="@+id/login_password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密码"
            android:inputType="textPassword"
            android:textColor="#888"
            android:textSize="15sp"
            android:background="@android:color/transparent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/login_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#888"
            android:textSize="12dp"
            android:text="我已阅读并同意"/>
        <TextView
            android:id="@+id/login_agreement_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#634A2A"
            android:textSize="12dp"
            android:text="《EBER服务协议》"/>
    </LinearLayout>
    <Button
        android:id="@+id/login_ok_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_btn_bg"
        android:textColor="@android:color/white"
        android:layout_marginLeft="57.5dp"
        android:layout_marginRight="57.5dp"
        android:text="完成"/>
</LinearLayout>