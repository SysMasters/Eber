<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#f3f3f3"
    android:layout_height="match_parent">
    <include layout="@layout/title_view" />

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:orientation="horizontal" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ico_user_phone"
            android:layout_marginLeft="23dp" />
        <EditText
            android:id="@+id/fgt_pwd_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="11"
            android:hint="手机号"
            android:inputType="number"
            android:background="@android:color/transparent"
            android:textSize="15sp"
            android:textColor="#888888"
            android:layout_marginLeft="13dp" />

    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bebebe"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/validation_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:src="@mipmap/ico_validation_code" />

        <EditText
            android:id="@+id/fgt_pwd_code"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/validation_img"
            android:hint="验证码"
            android:inputType="number"
            android:maxLength="8"
            android:background="@android:color/transparent"
            android:textColor="#888888"
            android:textSize="15sp" />

        <Button
            android:id="@+id/fgt_pwd_getcode"
            android:layout_width="115dp"
            android:layout_height="41dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/login_btn_bg"
            android:text="获取验证码" />

    </LinearLayout>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bebebe"/>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:background="#ffffff"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ico_user_psw"
            android:layout_gravity="center"
            android:layout_marginLeft="23dp"
            />
        <EditText
            android:id="@+id/fgt_pwd_pwd"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:hint="密码"
            android:inputType="textPassword"
            android:maxLength="12"
            android:background="@android:color/transparent"
            android:textSize="15sp"
            android:textColor="#888888"
            android:layout_marginLeft="13dp"
            />
        <ImageView
            android:id="@+id/fgt_pwd_eyes"
            android:src="@mipmap/ico_close_eyes"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"/>

    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bebebe"/>
    <Button
        android:id="@+id/fgt_pwd_ok"
        android:layout_gravity="center"
        android:layout_marginTop="110dp"
        android:text="确定"
        android:textColor="#ffffff"
        android:layout_marginLeft="88dp"
        android:layout_marginRight="88dp"
        android:textSize="15sp"
        android:background="@drawable/login_btn_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>