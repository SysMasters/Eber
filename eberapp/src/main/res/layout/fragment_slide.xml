<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/f_slide_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/f_slide_indicate_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:textSize="15sp"
                android:textColor="@color/theme_color"
                android:text="BMI" />
            <TextView
                android:id="@+id/f_slide_value_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:text="(25.6)"
                android:textColor="#000"
                android:textSize="15sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/f_slide_meaning_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:lineSpacingExtra="2dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="19dp"
            android:textColor="#000"
            android:textSize="13sp"
            android:text=""/>
    </LinearLayout>
    <com.eber.bfs.views.NotDragSeekBar
        android:id="@+id/f_slide_ndsb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:background="@drawable/lly_dashed_frame"
        android:orientation="vertical">
        <TextView
            android:id="@+id/f_slide_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#ff7689"
            android:layout_marginBottom="14dp"
            android:text="BMI微胖"/>
        <TextView
            android:id="@+id/f_slide_context_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#888"
            android:textSize="13sp"/>
    </LinearLayout>
</LinearLayout>