<?xml version="1.0" encoding="utf-8"?>
<com.eber.bfs.views.swipe.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginRight="15dp"
    android:orientation="vertical"
    android:paddingLeft="15dp">


    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sp_history_bg"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:id="@+id/history_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_history_add"/>

            <TextView
                android:id="@+id/history_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08.30"
                android:textColor="#a6888888"/>
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/history_add"
            android:background="#f2f2f2"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/history_w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ems="1"
                android:text="体重"
                android:textColor="#a6888888"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/history_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/history_w"
                android:text="48"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/history_weight"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/history_weight"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="kg"
                android:textColor="#a6888888"
                android:textSize="12sp"/>

            <View
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/kg"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">


            <TextView
                android:id="@+id/history_z"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ems="1"
                android:text="脂肪"
                android:textColor="#a6888888"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/history_zhifang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/history_z"
                android:text="23.3"
                android:textSize="30sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/history_zhifang"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/history_zhifang"
                android:paddingBottom="5dp"
                android:text="%"
                android:textColor="#a6888888"
                android:textSize="12sp"/>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/history_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/content"
            android:src="@mipmap/ic_history_del"/>
    </LinearLayout>

</com.eber.bfs.views.swipe.SwipeMenuLayout>